<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSatir"
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sil"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:scrollbarSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/sil_resim" />

            <ImageView
                android:id="@+id/yemekResmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="3dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/TextViewYemekAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/textViewFiyatSepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="38dp" />

            <TextView
                android:id="@+id/textViewAdetSepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="70dp" />

            <TextView
                android:id="@+id/textViewToplamFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="314dp"
                tools:layout_editor_absoluteY="68dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>